//---------------------------------------------------------------------------

#ifndef HashTableH
#define HashTableH

#include <string>
#include "LinkedDataList.h"

class HashTable
{
private:
	const static int size = 100;
	LinkedDataList hashArray[size];
    static int hashFunction(std::string value) {
		int key = value[0];
		for(int i = 1; i < value.length(); i++)
			key += value[i];
		return key % 99;
	};

public:
	__fastcall HashTable();
	void insert(std::string);
	bool find(std::string);
};

//---------------------------------------------------------------------------
#endif
