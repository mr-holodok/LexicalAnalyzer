//---------------------------------------------------------------------------
#pragma hdrstop

#include "HashTable.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

__fastcall HashTable::HashTable()
{
	for(int i = 0; i < size; i++)
		hashArray[i] = "\0";
}

int HashTable::hashFunction(std::string value)
{
	int key = value[0];
	int letter;
	for(int i = 1; i < value.length(); i++)
	{
		letter = value[i];
		key = key * 37 + letter;
	}
	return (int)(key % size);
}

bool HashTable::find(std::string value)
{
	int index = hashFunction(value);
	if (hashArray[index] == value) return true;
	else return false;
}

void HashTable::insert(std::string value)
{
	int index = hashFunction(value);
	hashArray[index] = value;
}
