__fastcall Error(unsigned int l, unsigned int p, std::string& msg)
{
	line = l;
	pos = p;
	message = msg;
}
//---------------------------------------------------------------------------
__fastcall Error(unsigned int l, unsigned int p)
{
	line = l;
	pos = p;
	message = "Unrecognized lexem!";
}
