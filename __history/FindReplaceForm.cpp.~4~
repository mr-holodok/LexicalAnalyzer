//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "FindReplaceForm.h"
#include "MainForm.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
	: TForm(Owner)
{
	parent = static_cast<TForm*>(Owner);
	caseOnly = false;
	down = true;
	this->Left = parent->Left + parent->Width / 2 - this->Width / 2;
	this->Top = parent->Top + parent->Height / 2 - this->Height / 2;
}
//---------------------------------------------------------------------------
void __fastcall TForm2::Button2Click(TObject *Sender)
{
	this->Close();
}
//---------------------------------------------------------------------------
void __fastcall TForm2::CheckBox2Click(TObject *Sender)
{
	if (CheckBox2->Checked)
		caseOnly = true;
	else
		caseOnly = false;
}
//---------------------------------------------------------------------------
void __fastcall TForm2::RadioGroup1Click(TObject *Sender)
{
	if (RadioGroup1->ItemIndex == 0)
		down = false;
	else
		down = true;
}
//---------------------------------------------------------------------------
void __fastcall TForm2::Button1Click(TObject *Sender)
{
	TForm1* f = static_cast<TForm1*>(parent);
	UnicodeString oldStr = Edit1->Text;
	UnicodeString newStr = Edit2->Text;
	f->ReplaceNext(&oldStr, &newStr, down, caseOnly);
}
//---------------------------------------------------------------------------
void __fastcall TForm2::Button3Click(TObject *Sender)
{
	TForm1* f = static_cast<TForm1*>(parent);
	UnicodeString oldStr = Edit1->Text;
	UnicodeString newStr = Edit2->Text;
	f->ReplaceAll(&oldStr, &newStr, down, caseOnly);
}
//---------------------------------------------------------------------------
void __fastcall TForm2::FormMouseMove(TObject *Sender, TShiftState Shift, int X, int Y)
{
	Button1->SetFocus();
}
//---------------------------------------------------------------------------

