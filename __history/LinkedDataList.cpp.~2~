//---------------------------------------------------------------------------

#pragma hdrstop

#include "LinkedDataList.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

void LinkedDataList::insert(std::string val)
{
	if(last == 0)
	{
		first = new DataItem(val);
		last = first;
	}
	else
	{
		last = (*last).getNext();
		last = new DataItem(val);
	}
}

bool LinkedDataList::find(std::string val)
{
	DataItem *item = first;
	while (item != 0)
	{
		if((*item).getValue() == val) return true;
		item = (*item).getNext();
	}
	return false;
}
