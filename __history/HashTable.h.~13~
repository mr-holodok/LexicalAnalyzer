#ifndef HashTableH
#define HashTableH

#include <string>

class HashTable
{
private:
	const static int size = 100;
	std::string hashArray[size];

public:
	__fastcall HashTable();
	void insert(std::string &); //this function gets index from hashFunction
	bool find(std::string &);

	//==== it is public only for a test!!=======
	int hashFunction(std::string &);  //this function gets key from DataItem
};

